<h1>List all articles</h1>
<%= link_to "Create new artica", new_article_path %>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        <% @articles.each do |a| %>
        <tr>
            <td><%=a.title %></td>
            <td><%=a.description %></td>
            <td><%= link_to "Edit" , edit_article_path(a) %></td>
            <td><%= link_to "Show" , article_path(a) %></td>
            <td><%= link_to "Delete" , article_path(a) , method: :delete, data: { confirm: "Are you sure?"} %></td>
        </tr>
        <% end %>
    </tbody>

</table>

<p><%= link_to "Back to Articles listing" , articles_path  %></p>
