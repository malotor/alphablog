<h1>Articles from "<%= @category.name %>"</h1>
<% if logged_in? and current_user.admin? %>
<div class="row">
  <span><%= link_to "Edit category name", edit_category_path(@category) %></span>
</div>
<% end %>
<%= render 'articles/article', obj:  @category_articles %>
<div class="center">
  <%= will_paginate @category_articles, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
</div>
