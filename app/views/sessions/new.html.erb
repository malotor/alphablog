<h1>Log In</h1>

<%= form_for :session ,:html => { class: "form-horizontal", role: "form" }, url: login_path do |u| %>
  <p>
    <%= u.label :email %> <br>
    <%= u.email_field :email %>
  </p>
  <p>
    <%= u.label :password %> <br>
    <%= u.password_field :password, placeholder: 'Enter a new password', autocomplete: "off" %>
  </p>
  <p>
    <%= u.submit  'Log in' , class: 'btn btn-primary btn-large'%>
  </p>
<% end %>
