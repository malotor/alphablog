<%= render 'shared/errors', obj: @user %>

<%= form_for @user do |u| %>

  <fieldset class="form-group">
    <label for="exampleInputEmail1"><%= u.label :username %></label>
    <%= u.text_field :username, class: 'form-control' %>
    <small class="text-muted">We'll never share your email with anyone else.</small>
  </fieldset>
  <fieldset class="form-group">
    <label for="exampleInputEmail1"><%= u.label :email %></label>
    <%= u.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
    <small class="text-muted">We'll never share your email with anyone else.</small>
  </fieldset>
  <fieldset class="form-group">
    <label for="exampleInputPassword1"><%= u.label :password %></label>
    <%= u.password_field :password, class: 'form-control', placeholder: 'Enter a new password' %>
  </fieldset>
  <input type="hidden" name="token" value="<%= @invitation.token %>" />
<%= u.submit @user.new_record? ? 'Sign up' : "Update your account" , class: 'btn btn-primary btn-large'%>


<% end %>

<%= link_to "Back to Articles listing" , articles_path , class: 'btn btn-outline-primary' %>
